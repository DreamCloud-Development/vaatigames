---
const {
  name = "Micheal Gough",
  body = '"Flowbite is just awesome. It contains tons of predesigned components and pages starting from login screen to complex dashboard. Perfect choice for your next SaaS application."',
  fonction = "Software Engineer @ Google",
  avatar = "https://github.com/herobrine.png",
} = Astro.props;

import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<section>
  <div class="max-w-screen-xl px-4 py-8 mx-auto text-center lg:py-16 lg:px-6">
    <figure class="max-w-screen-md mx-auto">
      <Icon
        name="ph:quotes-duotone"
        class="h-12 w-12 mx-auto mb-3 text-gray-400 dark:text-gray-600"
      />
      <blockquote>
        <p class="text-2xl font-medium">
          {body}
        </p>
      </blockquote>
      <figcaption class="flex items-center justify-center mt-6 space-x-3">
        <Image
          class="rounded-full"
          src={avatar}
          alt="profile avatar"
          width="24"
          height="24"
        />
        <div
          class="flex items-center divide-x-2 divide-gray-500 dark:divide-gray-700">
          <div class="pr-3 font-medium">
            {name}
          </div>
          <div class="pl-3 text-sm font-light text-gray-500 dark:text-gray-400">
            {fonction}
          </div>
        </div>
      </figcaption>
    </figure>
  </div>
</section>
