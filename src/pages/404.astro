---
import Layout from "../layouts/Layout.astro";
import FactGrid from "../components/FactGrid.astro";
import Team from "../components/Team.astro";
import Testimonie from "../components/Testimonie.astro";

import "@fontsource-variable/albert-sans";
import { Icon } from "astro-icon/components";
---

<Layout title="Vaatigames">
  <div style="min-height: 50vh;" class="px-2 lg:px-8">
    <h1 class="text-2xl lg:text-4xl font-bold pt-32">
      La page que vous cherchiez n'a pas été trouvée...
    </h1>
    <h1
      class="font-black text-6xl lg:text-9xl pb-4
      bg-gradient-to-r
      from-purple-500
      to-purple-800
      text-transparent
      bg-clip-text">
      404
    </h1>
    <a
      href="javascript:history. back()"
      class="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 inline-flex">
      <svg
        class="w-5 h-5 mr-2 -ml-1"
        xmlns="http://www.w3.org/2000/svg"
        width="1em"
        height="1em"
        viewBox="0 0 256 256">
        <g fill="currentColor">
          <path
            d="M224 56v144a8 8 0 0 1-8 8H40a8 8 0 0 1-8-8V56a8 8 0 0 1 8-8h176a8 8 0 0 1 8 8"
            opacity="0.2"></path>
          <path
            d="M184 104v32a8 8 0 0 1-8 8H99.31l10.35 10.34a8 8 0 0 1-11.32 11.32l-24-24a8 8 0 0 1 0-11.32l24-24a8 8 0 0 1 11.32 11.32L99.31 128H168v-24a8 8 0 0 1 16 0m48-48v144a16 16 0 0 1-16 16H40a16 16 0 0 1-16-16V56a16 16 0 0 1 16-16h176a16 16 0 0 1 16 16m-16 144V56H40v144z"
          ></path>
        </g>
      </svg>
      Retour
    </a>
    <a
      href="/"
      class="text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 inline-flex">
      <svg
        class="w-5 h-5 mr-2 -ml-1"
        xmlns="http://www.w3.org/2000/svg"
        width="1em"
        height="1em"
        viewBox="0 0 256 256">
        <path
          fill="currentColor"
          d="M224 120v96a8 8 0 0 1-8 8h-56a8 8 0 0 1-8-8v-52a4 4 0 0 0-4-4h-40a4 4 0 0 0-4 4v52a8 8 0 0 1-8 8H40a8 8 0 0 1-8-8v-96a16 16 0 0 1 4.69-11.31l80-80a16 16 0 0 1 22.62 0l80 80A16 16 0 0 1 224 120"
        ></path>
      </svg>
      Page d'acceuil
    </a>
  </div>
</Layout>
