---
const { title } = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/DrawerNav.astro";
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/vaati2.png" />
    <script is:inline>
      // ☝️ This script prevent the FART effect.
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "light");
      } else
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
    <title>{title}</title>
  </head>
  <body class="bg-base-200 transition-all duration-300">
    <div class="drawer">
      <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <Header />
        <article class="prose lg:prose-md min-h-screen mx-4 md:mx-auto pt-28 pb-10">
          <slot />
        </article>
        <Footer />
      </div>
      <div class="drawer-side">
        <Nav />
      </div>
    </div>
  </body>
</html>
